+    private static string SanitizeLineForOperatorScan(string line, ref int blockCommentDepth)
+    {
+        var chars = line.ToCharArray();
+        var inString = false;
+        var escaping = false;
+
+        for (var i = 0; i < chars.Length; i++)
+        {
+            var current = chars[i];
+            var next = i + 1 < chars.Length ? chars[i + 1] : '\0';
+
+            if (blockCommentDepth > 0)
+            {
+                chars[i] = ' ';
+                if (current == '(' && next == '*')
+                {
+                    chars[i + 1] = ' ';
+                    blockCommentDepth++;
+                    i++;
+                }
+                else if (current == '*' && next == ')')
+                {
+                    chars[i + 1] = ' ';
+                    blockCommentDepth--;
+                    i++;
+                }
+                continue;
+            }
+
+            if (!inString && current == '/' && next == '/')
+            {
+                for (var j = i; j < chars.Length; j++)
+                {
+                    chars[j] = ' ';
+                }
+                break;
+            }
+
+            if (!inString && current == '(' && next == '*')
+            {
+                chars[i] = ' ';
+                chars[i + 1] = ' ';
+                blockCommentDepth++;
+                i++;
+                continue;
+            }
+
+            if (current == '"' && !escaping)
+            {
+                inString = !inString;
+                chars[i] = ' ';
+                continue;
+            }
+
+            if (inString)
+            {
+                escaping = current == '\\' && !escaping;
+                chars[i] = ' ';
+                continue;
+            }
+
+            escaping = false;
+        }
+
+        return new string(chars);
+    }
